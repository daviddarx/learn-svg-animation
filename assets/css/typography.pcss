body {
  @apply text-base lg:text-lg 2xl:text-xl;
  @apply text-gray-900 font-normal leading-relaxed;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  @apply font-bold uppercase tracking-wider;
}

h1 {
  @apply text-h1;
}

h2 {
  @apply text-h2;
}

h3 {
  @apply text-h3;
}

a {
  @apply underline;
  @apply transition-text duration-text ease-out;

  &:hover {
    @apply text-primary-700;
  }
}
